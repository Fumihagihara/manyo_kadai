<h1>タスク一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
<!--    <th>期限</th> -->
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
<!--    <td><%#= task.expiration_date %></td> -->
    <td><%= link_to "詳細", task_path(task) %></td>
    <td><%= link_to "編集", edit_task_path(task) %></td>
    <td><%= link_to "削除", task_path(task), method: :delete, data: { confirm: '削除しますか?' } %></td>

  </tr>
<% end %>
</table>
